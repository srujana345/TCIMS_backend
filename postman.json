            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ABC Supplies\",\n  \"contact\": \"1234567890\",\n  \"email\": \"abc@supplies.com\",\n  \"address\": \"123 Main Street\"\n}"
            },
            "url": { "raw": "http://localhost:5000/suppliers", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["suppliers"] }
